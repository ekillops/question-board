{{#if answerQuestion}}
  <h5>Answer:</h5>
  <form>
    <div class="form-group">
      {{textarea class="form-control" value=answer placeholder="Answer..." required="true"}}
    </div>
    <div class="form-group">
      {{input class="form-control" value=author placeholder="Your name" required="true"}}
    </div>
    <button class="btn btn-sm btn-default inline" {{action 'saveAnswer'}}>Answer</button>
    <button class="btn btn-sm btn-default inline" {{action 'noAnswer'}}>Cancel</button>
  </form>
{{else}}
  <button class="btn btn-sm btn-default inline" {{action 'answerThis'}}>Answer This</button>
{{/if}}
